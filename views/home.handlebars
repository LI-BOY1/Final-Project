<link rel="stylesheet" href="/public/css/home.css">
<link rel="stylesheet" href="/public/css/stars.css">
<div class="row mb-5">
    <div class="col-6 offset-3">
        <form action="/search_1" method="POST" class="validated-form" novalidate>
            <div class="mt-5 mb-3">
                <label class="form-label home-search" for="searchTrainer">Search for trainer(s)</label>
                <input class="form-control" type="text" id="searchTrainer" name="searchTrainer" placeholder="Leave Trainer Name" autofocus required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Search</button>
            </div>
        </form>
    </div>
</div>
<div class="row mb-5">
    <div class="col-6 offset-3">
        <form action="/search_2" method="POST" class="validated-form" novalidate>
            <div class="mt-5 mb-3">
                <label class="form-label home-search" for="searchCourse">Search for course(s)</label>
                <input class="form-control" type="text" id="searchCourse" name="searchCourse" placeholder="Leave Course Name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Search</button>
            </div>
        </form>
    </div>
</div>
<div class="row offset-2">
    <h1 class="top-trainer mt-5 mb-5">Top Trainers</h1>
    {{#each trainer}}
    <div class="card ml-3 card-content">
        <img src="{{img}}" class="card-img-top mt-3" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{first_name}} {{last_name}}</h5>
            <h5 class="card-title">Rating: {{rating}}</h5>
                    <p class="starability-result" data-rating="{{rating}}">
                        {{!-- Rated: {{rating}} stars --}}
                    </p>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
            <a href="/fitclub/trainers/{{_id}}" class="btn btn-primary">View</a>
        </div>
    </div>
    {{/each}}
</div>