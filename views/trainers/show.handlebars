<div class="row">
    <div class="col-6 ">
        <div class="card mb-3">
            <img src=" {{trainer.img}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{trainer.first_name}} {{trainer.last_name}}</h5>
                <p class="card-text">{{trainer.info}}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">{{trainer.address}}</li>
                <li class="list-group-item">{{trainer.email}}</li>
                <li class="list-group-item">{{trainer.phone}}</li>
                <li class="list-group-item">{{trainer.age}} years old</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/fitclub/trainers">All Trainers</a>
                <a class="card-link btn btn-info" href="/fitclub/courses/trainers/{{trainer._id}}">All Courses</a>
            </div>
            <div class="card-footer text-muted">
                2 days ago
              </div>
        </div>
    </div>
</div>