<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="users.js"></script>

    <title>Fitness Club Login</title>

</head>

<body>


            <div class="row">
                {{#each trainer}}
                <div class="col-6">
                     
                    <div class="card mb-3">
                        <img src=" {{this.img}}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.first_name}} {{this.last_name}}</h5>
                            <p class="card-text">{{this.info}}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-muted">{{this.address}}</li>
                            <li class="list-group-item">{{this.email}}</li>
                            <li class="list-group-item">{{this.phone}}</li>
                        </ul>
                        <div class="card-body">
                            <a href="/fitclub/trainers/{{_id}}" class="btn btn-primary">View</a>
                        </div>
                        <div class="card-footer text-muted">
                            2 days ago
                        </div>
                         
                    </div>
                  
                </div>
            




{{/each}}

</div>
 
</body>
</html>